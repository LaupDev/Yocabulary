<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.practice.PracticeStartPageFragment">

    <TextView
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corners_practice_task"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        android:text="@string/meaning_task"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="17sp" />

    <Button
        android:enabled="false"
        android:id="@+id/start_practice"
        style="@style/Widget.Yocabulary.PracticeNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:paddingStart="45dp"
        android:paddingTop="5dp"
        android:paddingEnd="45dp"
        android:paddingBottom="5dp"
        android:text="@string/start"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:layout_gravity="bottom|center_horizontal"/>

</FrameLayout>