<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/letterListFragment">

    <fragment
        android:id="@+id/letterListFragment"
        android:name="com.laupdev.yourdictionary.ui.LetterListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_letter_list">
        <action
            android:id="@+id/action_letterListFragment_to_wordListFragment"
            app:destination="@id/wordListFragment" />
        <action
            android:id="@+id/action_letterListFragment_to_addNewWordFragment"
            app:destination="@id/addNewWordFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordListFragment"
        android:name="com.laupdev.yourdictionary.ui.WordListFragment"
        android:label="@string/word_list_fragment_label"
        tools:layout="@layout/fragment_word_list">
        <argument
            android:name="letter"
            app:argType="string" />
        <action
            android:id="@+id/action_wordListFragment_to_addNewWordFragment"
            app:destination="@id/addNewWordFragment" />
        <action
            android:id="@+id/action_wordListFragment_to_wordDetailsFragment"
            app:destination="@id/wordDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordDetailsFragment"
        android:name="com.laupdev.yourdictionary.ui.WordDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_word_details">
        <argument
            android:name="word_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_wordDetailsFragment_to_addNewWordFragment"
            app:destination="@id/addNewWordFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewWordFragment"
        android:name="com.laupdev.yourdictionary.ui.AddNewWordFragment"
        android:label="@string/add_new_word"
        tools:layout="@layout/fragment_add_new_word" >
        <argument
            android:name="word_id"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>